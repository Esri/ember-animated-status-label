<div>
  <button {{action "startTask"}}>Start Task</button>
  <button {{action "resolve"}}>Resolve</button>
  <button {{action "reject"}}>Reject</button>
</div>
{{#animated-status-label promise=deferred.promise as |label|}}
  {{#if label.isSettled}}
    settled
  {{else if label.isConfirming}}
    confirming
  {{else if label.isPending}}
    pending...
  {{/if}}
{{/animated-status-label}}